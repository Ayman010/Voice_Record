<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="#324994"
    tools:context="com.ayman.android.voicerecord.MainActivity">


    <Button
        android:layout_width="150dp"
        android:layout_height="80dp"
        android:id="@+id/buttonTtsMain"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/tts"
        android:layout_marginTop="87dp"
        android:onClick="tts"
        android:clickable="true" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="TEXT TO SPEECH"
        android:textColor="#f5e105"
        android:id="@+id/textView"
        android:layout_below="@+id/buttonTtsMain"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="200dp"
        android:layout_height="100dp"
        android:id="@+id/buttonSttMain"
        android:background="@drawable/stt"
        android:layout_below="@+id/buttonTtsMain"
        android:layout_centerHorizontal="true"
        android:onClick="stt"
        android:layout_marginTop="129dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="SPEECH TO TEXT"
        android:id="@+id/textView2"
        android:layout_below="@+id/buttonSttMain"
        android:textColor="#ffffff"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
